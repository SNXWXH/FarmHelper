        <item name="android:fontFamily">@font/nanumsquareneo_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="extraBoldStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanumsquareneo_extrabold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="boldStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanumsquareneo_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="heavyStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanumsquareneo_heavy</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="cardViewStyle" parent="Widget.Material3.CardView.Elevated">
