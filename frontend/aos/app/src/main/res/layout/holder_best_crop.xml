<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cropNameTV"
            style="@style/BoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cropRankTV"
            app:layout_constraintStart_toEndOf="@+id/cropRankTV"
            app:layout_constraintTop_toTopOf="@+id/cropRankTV" />

        <TextView
            android:id="@+id/cropRankTV"
            style="@style/BoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cropCountTV"
            style="@style/BoldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/cropNameTV"
            app:layout_constraintStart_toEndOf="@+id/cropNameTV"
            app:layout_constraintTop_toTopOf="@+id/cropNameTV" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>