<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/snsLoginContentsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sns_login_contents"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.781" />

        <ImageView
            android:id="@+id/googleLoginIV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/google_login_contents"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/snsLoginContentsTV"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>